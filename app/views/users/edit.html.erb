<%= render "shared/second-header"%>
<div class='edit-main'>
  <%= form_with model: @user, url: user_path(@user), method: :patch, data: { turbo: false } do |form| %> 
    <div class='edit-form-wrap'>
     <div class='edit-form-header'>
      <h1 class='edit-form-header-text'>
          会員情報管理
      </h1>
     </div>
      <%= render 'shared/error_messages', model: @user %>
      <div class="edit-form-group">
       <div class='edit-form-text-wrap'>
         <label class="edit-form-text">ニックネーム</label>
       </div>
       <%= form.text_area :nickname, class:"edit-input-default", id:"nickname", placeholder:"例) シューフィットたろう", maxlength:"40", autofocus: true  %>
     </div>
     <div class="edit-form-group">
       <div class='edit-form-text-wrap'>
         <label class="edit-form-text">メールアドレス</label>
       </div>
       <%= form.email_field :email, class:"edit-input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
     </div>
     <div class="edit-form-group">
        <div class='edit-form-text-wrap'>
          <label class="edit-form-text">パスワード</label>
        </div>
        <%= form.password_field :password, class:"edit-input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
        <p class='edit-info-text'>※英字と数字の両方を含めて設定してください</p>
     </div>
     <div class="edit-form-group">
       <div class='edit-form-text-wrap'>
         <label class="edit-form-text">パスワード(確認)</label>
       </div>
       <%= form.password_field :password_confirmation, class:"edit-input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
     </div>
     <div class="edit-form-group">
       <div class='edit-form-text-wrap'>
         <label class="edit-form-text">お名前(全角)</label>
       </div>
       <div class='edit-input-name-wrap'>
         <%= form.text_area :name, class:"edit-input-name", id:"name", placeholder:"例) 山田太郎" %>
       </div>
     </div>
      <div class="edit-form-group">
        <div class='edit-form-text-wrap'>
          <label class="edit-form-text">住所</label>
        </div>
        <%= form.text_field :address, class:"edit-input-default", id:"address", placeholder:"例）東京都渋谷区ビル1-2-3"%>
      </div>
      <div class="edit-form-group">
        <div class='edit-form-text-wrap'>
          <label class="edit-form-text">電話番号</label>
        </div>
        <%= form.text_field :phone_number, class:"edit-input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
      </div>
      <div class="edit-form-group">
        <div class='edit-btn'>
          <%= form.submit "会員情報を更新" ,class:"editupdate-red-btn" %>
        </div>
      </div>
      <div class="edit-form-group">
        <div class='edit-btn'>
         <%= form.submit "会員情報を削除" ,class:"editdelete-red-btn" %>
        </div> 
      </div> 
    </div>
  <% end %>
</div>
<%= render "shared/second-footer"%>