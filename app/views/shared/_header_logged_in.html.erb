<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("shoefit-pro-logo.png", class:"shoefit-pro-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='顧客名を検索'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
      <li><%= link_to '顧客リスト', "#", class: "customers-list" %></li>
      <li><%= link_to 'ユーザー管理', edit_user_path(current_user), class: "user-information" %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, data: {turbo_method: :delete}, class: "logout" %></li>
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>